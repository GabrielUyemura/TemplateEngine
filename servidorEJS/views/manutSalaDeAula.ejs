<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Salas de Aula</title>
</head>

<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="container">
            <h2 class="text-center mb-4">Salas de Aula</h2>
            <table class="table table-striped table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Descrição</th>
                        <th>Localização</th>
                        <th>Capacidade</th>
                        <th>Removido</th>
                    </tr>
                </thead>
                <tbody>
                    <% const salas=[ { id: 1, descricao: 'Sala A1' , localizacao: 'Bloco A' , capacidade: 40, removido:
                        false }, { id: 2, descricao: 'Sala B2' , localizacao: 'Bloco B' , capacidade: 50, removido: true
                        }, { id: 3, descricao: 'Sala C3' , localizacao: 'Bloco C' , capacidade: 30, removido: false }, {
                        id: 4, descricao: 'Sala D4' , localizacao: 'Bloco D' , capacidade: 25, removido: false }, { id:
                        5, descricao: 'Sala E5' , localizacao: 'Bloco E' , capacidade: 45, removido: true } ];
                        salas.forEach(sala=> {
                        %>
                        <tr>
                            <td>
                                <%= sala.id %>
                            </td>
                            <td>
                                <%= sala.descricao %>
                            </td>
                            <td>
                                <%= sala.localizacao %>
                            </td>
                            <td>
                                <%= sala.capacidade %>
                            </td>
                            <td>
                                <%= sala.removido ? 'Sim' : 'Não' %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <div class="text-center">
                <a href="/" class="btn btn-secondary mt-3">Página Principal</a>
            </div>
        </div>
    </div>
</body>

</html>